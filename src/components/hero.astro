---
import { Picture } from "astro:assets";
import heroImage from "assets/heroland.png";
import Link from "@components/ui/link.astro";
import Wizard from "./wizard.astro";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12">
  <!-- Text Content -->
  <div class="order-1">
    <h1
      class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter text-center">
      کارنامه
      <span class="text-indigo-600">۳ ساله</span>
      تخصصی پایه دوازدهم و نهم
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl pt-3 text-center">
      تحلیل تخصصی ۳ ساله دانش‌آموزان شما، برای طراحی دقیق‌ترین مسیر کنکور و
      انتخاب رشته
    </p>
    <div id="cta" class="mt-6 flex flex-col sm:flex-row gap-3 justify-center">
      <Link
        href="#"
        onclick="openWizard()"
        class="flex gap-1 items-center justify-center bg-indigo-600 text-black hover:bg-blue-600 rounded-full">
        <!-- دسترسی فوری به صرافی‌های جهانی -->
        برای دریافت نمونه کارنامه اختصاصی کلیک کنید
      </Link>
    </div>
  </div>

  <!-- Image with Gradient -->
  <div class="order-2 lg:order-2 pt-6 relative">
    <!-- Gradient Blur Effect (Top-Left Portion) -->
    <div
      class="absolute top-24 left-0 w-3/4 h-1/3 lg:top-36 h-2/3 -z-10 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 blur-3xl opacity-50 rounded-full">
    </div>
    <!-- Picture Component -->
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[240, 720, 1183]}
      sizes="(max-width: 1024px) 100vw, 920px"
      loading="eager"
      format="avif"
    />
  </div>
</main>
