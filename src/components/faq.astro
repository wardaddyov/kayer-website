---

<div class="mt-16 text-center">
  <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    سوالات متداول
  </h1>
  <p class="text-lg mt-4 text-slate-500 mx-auto max-w-xl">
    پاسخ به سوالات متداول شما
  </p>
</div>
<div class="grid divide-y divide-neutral-200 max-w-xl mx-auto mt-8">
  {
    faqs.map((item) => (
      <div class="py-5">
        <details class="group">
          <summary class="flex justify-between items-center font-medium cursor-pointer list-none">
            <span>{item.question}</span>
            <span class="transition group-open:rotate-180 ">
              <svg
                fill="none"
                height="24"
                shape-rendering="geometricPrecision"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                viewBox="0 0 24 24"
                width="24">
                <path d="M6 9l6 6 6-6" />
              </svg>
            </span>
          </summary>
          <p class="text-neutral-600 mt-3 group-open:animate-fadeIn text-justify pl-10">
            {item.answer}
          </p>
          {item.question ===
            "چطوری می‌تونم از کیفیت سرویس های شما مطمئن بشم؟" && (
            <a href="https://app.eementrade.com/#/login?gS=1&sT=Tr">
            <button
              class="mt-4 ml-10 px-4 py-2 bg-blue-500 text-white rounded">
              دریافت سرویس
            </button>
            </a>
          )}
        </details>
      </div>
    ))
  }
</div>
